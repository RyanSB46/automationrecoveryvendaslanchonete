# Evolution API Configuration
EVOLUTION_HOST=http://localhost:8080
EVOLUTION_API_KEY=sua_api_key_aqui
EVOLUTION_INSTANCE=aula

# Server Configuration
PORT=3000
# ========================================
# Configuração de Impressora Térmica 80mm
# ========================================

# Modo de operação
# true  = Modo SIMULAÇÃO (salva cupons em arquivo .txt)
# false = Modo REAL (envia para porta serial via ESC/POS)
PRINTER_SIMULATION_MODE=true

# Porta serial da impressora
# Windows: COM1, COM2, COM3, COM4, etc
# Linux:   /dev/ttyUSB0, /dev/ttyUSB1, /dev/ttyACM0, etc
# macOS:   /dev/tty.usbserial-XXXXX
PRINTER_SERIAL_PORT=COM3

# Taxa de transmissão (baud rate)
# Valores comuns: 9600, 19200, 38400, 57600, 115200
# Padrão de impressoras térmicas: 115200
PRINTER_BAUD_RATE=115200

# Largura da impressora em caracteres
# 40 caracteres para impressoras 80mm
# 58 caracteres para impressoras 112mm (raro)
PRINTER_WIDTH=40

# Timeout para comunicação serial (ms)
# Tempo máximo para aguardar resposta da impressora
PRINTER_TIMEOUT=5000

# Diretório de cupons (modo simulação)
# Onde os cupons serão salvos em modo simulação
PRINTER_SIMULATION_PATH=./cupons

# Tamanho da fonte (ESC/POS)
# normal, small, large
PRINTER_FONT_SIZE=normal

# Página de código (ESC/POS)
# CP1252 (padrão Windows/Lucene)
# UTF8 (conforme implementação)
PRINTER_CODEPAGE=CP1252